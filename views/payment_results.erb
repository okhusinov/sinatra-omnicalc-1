<h1>Payment Results</h1>

<dl>
  <dt>APR</dt>
  <dd>
    <%= @user_apr_input.to_fs(:percentage, { precision: 4 }) %>
  </dd>

  <dt>Number of years</dt>
  <dd>
    <%= @user_years_input %>
  </dd>

  <dt>Principal</dt>
  <dd>
    <%= @user_pv_input.to_fs(:currency) %>
  </dd>

  <dt>Payment</dt>
  <dd>
    <%= @payment_result.to_fs(:currency) %>
  </dd>

</dl>

<a href="/payment/new">
  Calculate another payment
</a>
